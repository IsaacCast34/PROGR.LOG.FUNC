module Main where

import Text.Printf

type Vector = (Double, Double)

-- Funci贸n para calcular el m贸dulo de un vector
moduloVector :: Vector -> Double
moduloVector (x, y) = sqrt (x * x + y * y)

main :: IO ()
main = do
    -- Ejemplo de uso
    let vector = (3.0, 4.0)  -- Vector (3, 4)
    printf "El m贸dulo del vector (%.1f, %.1f) es: %.2f\n" (fst vector) (snd vector) (moduloVector vector)

